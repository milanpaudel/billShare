<h2>{{group.name}}</h2>

<button type="button" class="btn-edit" onclick="editGroup('{{group._id}}')">âœï¸ Edit Group</button>

<button type="button" class="btn-delete" onclick="deleteGroup('{{group._id}}')">ğŸ—‘ï¸ Delete Group</button>

<p><strong>Memebrs: </strong>{{group.members}}</p>

<h3>Add Expense:</h3>


<form action="/group/{{group._id}}/expenses" method="POST">
    <input type="text" name="description" placeholder="Expense description" required>
    <input type="number" name="amount" placeholder="Amount" step="0.01" required>
    <label for="paidBy">Paid By: </label>
    <select name="paidBy" id="paidBy" required>
        {{#each group.members}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <button type="submit">Add expense</button>
</form>

<h3>Expenses: </h3>
<ul>
    {{#each group.expenses}}
    <div class="expense" id="expense-{{_id}}">
        <p><strong>{{description}}</strong> - ${{amount}} paid by {{paidBy}}</p>

        <!-- Edit button -->
        <button type="button" class="btn-edit" onclick="toggleEditForm('{{_id}}')">âœï¸ Edit</button>
        <button type="button" class="btn-delete" onclick="deleteExpense('{{../group._id}}', '{{_id}}')">ğŸ—‘ï¸
            Delete</button>


        <!-- Hidden edit form -->
        <form id="edit-form-{{_id}}" action='/group/{{../group._id}}/expenses/{{_id}}/edit' method="POST"
            style="display: none;">
            <input type="text" name="description" value="{{description}}" required>
            <input type="number" name="amount" value="{{amount}}" step="0.01" required>
            <select name="paidBy">
                {{#each ../group.members}}
                <option value="{{this}}" {{#ifEquals this ../paidBy}}selected{{/ifEquals}}>{{this}}</option>
                {{/each}}
            </select>
            <button type="submit">ğŸ’¾ Save</button>
        </form>

    </div>
    {{/each}}

</ul>

<h3>Settlement Summary</h3>
<ul>
    {{#each balances}}
    <li>
        {{@key}}:
        {{#if (lt this 0)}} owes ${{multiply this -1}}
        {{else}} is owed ${{this}}
        {{/if}}
    </li>
    {{/each}}
</ul>