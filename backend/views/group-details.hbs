<h2>{{group.name}}</h2>

<form action="/group/{{group._id}}/delete" method="POST"
    onsubmit="return confirm('Are you sure you want to delete this group?')">
    <button type="submit" class="delete-btn">‚ùå Delete Group</button>
</form>

<p><strong>Memebrs: </strong>{{group.members}}</p>

<h3>Add Expense:</h3>


<form action="/group/{{group._id}}/expenses" method="POST">
    <input type="text" name="description" placeholder="Expense description" required>
    <input type="number" name="amount" placeholder="Amount" step="0.01" required>
    <label for="paidBy">Paid By: </label>
    <select name="paidBy" id="paidBy" required>
        {{#each group.members}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <button type="submit">Add expense</button>
</form>

<h3>Expenses: </h3>
<ul>
    {{#each group.expenses}}
    <li>{{description}} - ${{amount}} (Paid By: {{paidBy}})</li>
    {{/each}}
</ul>

<h3>Settlement Summary</h3>
<ul>
    {{#each balances}}
    <li>
        {{@key}}:
        {{#if (lt this 0)}} owes ${{multiply this -1}}
        {{else}} is owed ${{this}}
        {{/if}}
    </li>
    {{/each}}
</ul>